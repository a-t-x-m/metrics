{
  "name": "@atxm/metrics",
  "version": "0.13.1",
  "description": "Event tracking for your Atom packages made easy",
  "license": "MIT OR GPL-2.0",
  "scripts": {
    "build": "rollup -c",
    "dev": "npm run start",
    "lint:json": "jsonlint --quiet ./*.json",
    "lint:md": "remark . --quiet --frail --ignore-path .gitignore",
    "lint:ts": "eslint ./src --ignore-path .gitignore",
    "lint": "npm-run-all --parallel lint:*",
    "start": "rollup -w -c",
    "test": "npm run lint"
  },
  "main": "./lib/index.js",
  "type": "module",
  "typings": "./types",
  "homepage": "https://www.npmjs.com/package/@atxm/metrics",
  "repository": {
    "type": "git",
    "url": "https://github.com/a-t-x-m/metrics.git"
  },
  "keywords": [
    "atom",
    "atom package",
    "analytics",
    "google analytics",
    "matomo",
    "piwik",
    "telemetry",
    "tracking",
    "metrics"
  ],
  "dependencies": {
    "@atxm/developer-console": "^0.3.0",
    "address": "^1.1.2",
    "caller-callsite": "^4.1.0",
    "dot-object": "^2.1.4",
    "hasha": "^5.2.2",
    "ip-regex": "^4.2.0",
    "query-string": "^6.13.8",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^11.0.1",
    "@rollup/plugin-typescript": "^8.1.0",
    "@types/atom": "^1.40.6",
    "@types/node": "^14.14.20",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/parser": "^4.13.0",
    "eslint": "^7.17.0",
    "eslint-plugin-json": "^2.1.2",
    "husky": "^4.3.7",
    "jsonlint": "^1.6.3",
    "lint-staged": "^10.5.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "remark-cli": "^9.0.0",
    "remark-preset-lint-recommended": "^5.0.0",
    "remark-preset-prettier": "^0.4.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.36.1",
    "tslib": "^2.1.0",
    "typescript": "^4.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 4
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix",
    "*.json": "jsonlint --quiet",
    "*.md": "prettier --write"
  }
}
